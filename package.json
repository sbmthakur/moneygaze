{
  "name": "moneygaze",
  "version": "0.0.1",
  "description": "Get all accounts in one place, track subscriptions etc.",
  "private": true,
  "main": "server.js",
  "scripts": {
    "build-ts": "tsc -p ./code/tsconfig.json",
    "build": "npm run build-ts",
    "build-client": "next build",
    "generate": "npx prisma generate",
    "next-dev": "next",
    "clean": "rimraf dist/",
    "dev": "concurrently --kill-others --prefix \"[{name}]\" --names \"Typescript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"wait-on dist/server.js && npm run serve-debug\"",
    "format-schema": "npx prisma format",
    "migrate-dev": "npx prisma migrate dev --name init",
    "serve": "node dist/server.js",
    "serve-debug": "node --inspect dist/server.js",
    "start": "next start",
    "webdev": "npm run build && run-p next-dev serve",
    "watch-ts": "tsc -w -p ./code/tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sbmthakur/moneygaze.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sbmthakur/moneygaze/issues"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.15",
    "@types/node": "^18.11.18",
    "concurrently": "^7.6.0",
    "npm-run-all": "^4.1.5",
    "prisma": "^4.9.0",
    "rimraf": "^4.1.1",
    "run-p": "^0.0.0",
    "typescript": "^4.9.4",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "@prisma/client": "^4.9.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "iron-session": "^6.3.1",
    "nanoid": "^4.0.1",
    "next": "^13.1.6",
    "plaid": "^12.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-plaid-link": "^3.3.2",
    "react-scripts": "5.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "proxy": "http://localhost:3000"
}
